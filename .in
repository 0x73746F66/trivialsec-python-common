#!/usr/bin/env bash
echo -e "\033[0;36m
 _____      _       _       _ __             
/__   \_ __(_)_   _(_) __ _| / _\ ___  ___   
  / /\/ '__| \ \ / / |/ _\` | \ \ / _ \/ __| 
 / /  | |  | |\ V /| | (_| | |\ \  __/ (__   
 \/   |_|  |_| \_/ |_|\__,_|_\__/\___|\___|  
                                             \033[0m"

if [[ -f .venv/bin/activate ]]; then
  source .venv/bin/activate
else
  python3 -m venv .venv
  source .venv/bin/activate
fi
if [[ -f .env ]]; then
  source .env
else
  cp .env-example .env
  nano .env
  source .env
fi
echo -e "\033[0;36m"
echo $(make --version)
pip --version
echo -e "\033[0m"

make install-deps

echo -e "\033[0;36m"
echo $(pylint --version)
echo semgrep $(semgrep --version)
echo -e "\033[0m"

git fetch
git status
echo

if [[ -f "$(which git-secrets 2>/dev/null)" ]]; then
  git-secrets --scan
else
  echo -e "\033[0;31mPlease install git-secrets \033[0m"
fi
make install
make lint
